#!/data/data/com.termux/files/usr/bin/bash
# Supervisor de ADN Blindado

PACKAGE_OFICIAL=$(grep "applicationId" ~/chesz/app/build.gradle | head -1 | cut -d"'" -f2)
MANIFEST_PKG=$(grep "package=" ~/chesz/app/src/main/AndroidManifest.xml | cut -d'"' -f2)

echo "ğŸ” [SUPERVISOR] Validando y Blindando ADN..."

# IF 1: Coherencia de Identidad
if [ "$PACKAGE_OFICIAL" != "$MANIFEST_PKG" ]; then
    echo "âš ï¸ Discrepancia detectada. Intentando autocuraciÃ³n..."
    sed -i "s/package=\".*\"/package=\"$PACKAGE_OFICIAL\"/" ~/chesz/app/src/main/AndroidManifest.xml
    echo "âœ… Manifiesto alineado con Gradle."
fi

# IF 2: ValidaciÃ³n de Estructura de Carpetas
EXPECTED_PATH="app/src/main/java/${PACKAGE_OFICIAL//.//}"
if [ ! -d "$HOME/chesz/$EXPECTED_PATH" ]; then
    echo "âŒ ERROR CRÃTICO: La estructura de carpetas no coincide con el paquete $PACKAGE_OFICIAL"
    exit 1
fi

# IF 3: Limpieza de Residuos (Elimina archivos que no deberÃ­an estar en la raÃ­z)
if [ -f "$HOME/chesz/fisgon.sh" ]; then
echo "- [ ] âš ï¸ DETENIDO: Mover fisgon.sh a Scripts/ manualmente." >> ~/chesz/paper && echo "âŒ INTEGRIDAD FALLIDA. Revisa paper." && exit 1
    echo "ğŸ§¹ Limpiado residuo de fisgon.sh en raÃ­z."
fi

echo "âœ… ADN Blindado."
