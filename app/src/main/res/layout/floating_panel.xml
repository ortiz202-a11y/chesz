<?xml version="1.0" encoding="utf-8"?>
<!--
    Floating panel overlay layout.
    Opens upward from the button position.  Contains a status area, a main
    content area (placeholder for now) and a close button.

    TODO: replace LinearLayout with the full three-zone layout described in README
    (status bar, main area, close/cancel button) once the API integration is ready.
-->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardBackgroundColor="#CC1A1A2E"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Placeholder icon / branding -->
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_placeholder_panel"
            android:contentDescription="@string/panel_icon_desc" />

        <!-- Placeholder main content -->
        <TextView
            android:id="@+id/tv_panel_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/panel_placeholder"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:gravity="center" />

        <!-- Close button -->
        <Button
            android:id="@+id/btn_close_panel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:text="@string/close"
            android:backgroundTint="#3D5AFE"
            android:textColor="#FFFFFF" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
