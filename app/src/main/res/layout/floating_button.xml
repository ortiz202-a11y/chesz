<?xml version="1.0" encoding="utf-8"?>
<!--
    Floating button overlay layout.
    Sizes are wrap_content so the placeholder drawable fills the view naturally.
-->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_floating_button"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_floating_button"
        android:background="@drawable/bg_button_circle"
        android:contentDescription="@string/floating_button_desc"
        android:scaleType="centerInside"
        android:padding="8dp" />

</FrameLayout>
