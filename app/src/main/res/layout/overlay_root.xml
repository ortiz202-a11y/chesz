<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/rootOverlay"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:background="@android:color/transparent"
  android:clipChildren="false"
  android:clipToPadding="false">

  <!-- Panel: a la derecha del botón; empieza en la mitad del botón (80dp/2 = 40dp) -->
  <FrameLayout
    android:id="@+id/panelContainer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|start"
    android:layout_marginStart="40dp"
    android:visibility="gone"
    android:clickable="true"
    android:focusable="false">

    <include layout="@layout/overlay_panel"/>
  </FrameLayout>

  <!-- Botón flotante: siempre visible, siempre draggable -->
  <include
    android:id="@+id/floatingButtonContainer"
    layout="@layout/overlay_floating_button"
    android:layout_gravity="bottom|start"/>
</FrameLayout>
