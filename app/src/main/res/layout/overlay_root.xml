<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootOverlay"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false">

    <LinearLayout
        android:id="@+id/panelBubble"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:drawable/toast_frame"
        android:backgroundTint="#EE000000"
        android:padding="12dp"
        android:layout_marginTop="0dp"
        android:layout_marginStart="65dp"
        android:visibility="gone">
        <TextView
            android:id="@+id/stateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:text="Estado: Listo" />
        <TextView
            android:id="@+id/recoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#AAAAAA"
            android:textSize="12sp"
            android:text="Chesz Analyzer" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/bubbleContainer"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="top|start"
        android:background="@android:drawable/ic_menu_bg">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@android:drawable/ic_dialog_info"
            android:tint="#FFFFFF" />
    </FrameLayout>
</FrameLayout>
